{
  "name": "gizebets-system",
  "functions": {
    "pages/api/**/*.js": {
      "maxDuration": 30
    }
  },
  "regions": ["cle1"],
  "crons": [
    {
      "path": "/api/cron/daily-setup",
      "schedule": "0 3 * * *"
    },
    {
      "path": "/api/cron/check-timing",
      "schedule": "*/30 * * * *"
    },
    {
      "path": "/api/cron/results", 
      "schedule": "0 18 * * *"
    },
    {
      "path": "/api/cron/promo",
      "schedule": "0 7,11,15 * * *"
    }
  ]
}